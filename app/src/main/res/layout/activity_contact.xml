<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:id="@+id/contact_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dhaka Club Limited"
        android:id="@+id/textView4"
        android:layout_below="@+id/contact_text"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_margin="5pt"
        android:paddingBottom="10dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView4"
        android:id="@+id/layout_address"
        android:weightSum="2"
        android:paddingTop="10dp"
        >


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/contacthome"
            android:id="@+id/address_image_layout"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_text_layout"
            android:text="House # 10, Road # 5,\nSector # 4,Uttara,\nDhaka - 1230 "
            android:textColor="#fff"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_phone"
        android:layout_below="@+id/layout_address"
        android:weightSum="2"
        android:paddingTop="10dp"
        >


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/contactphone"
            android:id="@+id/phonne_image_layout"
            android:layout_weight="1.02"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_text_layout"
            android:text="+88 01717898940      \n+88 01745456465      \n+88 01654545441      "
            android:textColor="#fff"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_web"
        android:layout_below="@+id/layout_phone"
        android:weightSum="2"
        android:paddingTop="10dp"
        >


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/contactweb"
            android:id="@+id/web_image_layout"
            android:layout_weight="1.08"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/web_text_layout"
            android:text="www.dhakaclubltd.com"
            android:textColor="#fff"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_mail"
        android:layout_below="@+id/layout_web"
        android:weightSum="2"
        android:paddingTop="10dp"
        >


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/contactmail"
            android:id="@+id/mail_image_layout"
            android:layout_weight="0.99"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mail_text_layout"
            android:text="m.chow@gmail.com"
            android:textColor="#fff"

            android:layout_weight="0.11" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_mail"
        >
        <TableRow>
            <Button
                android:background="#40ffffff"
                android:requiresFadingEdge="horizontal|vertical"
                android:layout_margin="5dp"
                />
            <Button
                android:background="#40ffffff"
                android:requiresFadingEdge="horizontal|vertical"
                android:layout_margin="5dp"

                />
            <Button
                android:background="#40ffffff"
                android:requiresFadingEdge="horizontal|vertical"
                android:layout_margin="5dp"

                />

        </TableRow>
    </TableLayout>


</RelativeLayout>
