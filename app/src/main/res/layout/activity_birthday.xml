<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.psionicinteractive.directorycc.BirthdaysActivity">


    <pl.droidsonroids.gif.GifTextView
        android:layout_width="match_parent"
        android:layout_height="70pt"
        android:layout_gravity="center"
        android:paddingTop="10dip"
        android:background="@drawable/birthdaycandle"
        android:id="@+id/headerlayout"
        />

    <LinearLayout
        android:id="@+id/wish_linear_layout"
        android:layout_below="@+id/headerlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="2"

        android:background="#000"
        >
        <TextView
            android:id="@+id/text_button_birthday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BIRTHDAYS"
            android:textColor="#fff"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginRight=".5dp"
            android:onClick="onClickFromTextButton_birthday"
            android:background="#0A468D"

            android:layout_weight="1"/>

        <TextView
            android:id="@+id/text_button_anniversary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ANNIVERSARY"
            android:textColor="#fff"
            android:background="#0A468D"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="onClickFromTextButton_anniversary"
            android:layout_weight="1"/>
    </LinearLayout>

